<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit trip's imformation</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="row">
            <form action="/update-trip" method="POST">

                <div class="form-row">
                    <h1 class="col-12 mt-3"><b>Chỉnh sửa và cập nhật chuyến</b></h1>

                    <input type="hidden" name="id" value="<%= trip.id %>">
                    <div class="form-group col-md-6">
                        <label for="diemXuatPhat">Điểm xuất phát</label>
                        <input type="text" class="form-control" placeholder="Điểm xuất phát" name="diemXuatPhat"
                            value="<%= trip.diemXuatPhat %>">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="diemDen">Điếm đến</label>
                        <input type="text" class="form-control" name="diemDen" placeholder="Điểm đến"
                            value="<%= trip.diemDen %>">
                    </div>
                </div>

                <div class="form-group">
                    <label for="thoiGianDi">Thời gian đi</label>
                    <input type="date" class="form-control" name="thoiGianDi" placeholder="Thời gian đi"
                        value="<%= trip.thoiGianDi %>">
                </div>
                <div class="form-group">
                    <label for="thoiGianDen">Thời gian đến</label>
                    <input type="date" class="form-control" name="thoiGianDen" placeholder="Thời gian đến"
                        value="<%= trip.thoiGianDen %>">
                </div>

                <div class="form-group">
                    <label for="giaVe">Giá vé</label>
                    <input type="number" class="form-control" name="giaVe" placeholder="Thời gian đến"
                        value="<%= trip.giaVe %>">
                </div>

                <div class="form-group">
                    <label for="tenTau">Tên tàu</label>
                    <input type="text" class="form-control" name="tenTau" placeholder="Tàu" value="<%= trip.tenTau %>">
                </div>
                <div class="form-group">
                    <label for="soToa">Số toa</label>
                    <input type="number" class="form-control" name="soToa" placeholder="Số..."
                        value="<%= trip.soToa %>">
                </div>

                <div class="form-group">
                    <label for="soGhe">Số ghế</label>
                    <input type="number" class="form-control" name="soGhe" placeholder="Số..."
                        value="<%= trip.soGhe %>">
                </div>

                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</body>

</html>
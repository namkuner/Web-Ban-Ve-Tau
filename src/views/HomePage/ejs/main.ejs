}
.booking-form::after {
	display: inline-block;
	content: '';
	position: absolute;
	top: -24px;
	left: 0;
    z-index: 2;

	width:295px;
	height: 23px;
    /*background-image: url('/HomePage/images/train-footer.png');*/

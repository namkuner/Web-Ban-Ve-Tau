    background-repeat: no-repeat;
    background-size: cover;
    animation: trainRun linear 14s infinite;
    /* background-color: #333; */
}
@keyframes trainRun {
    from {
        left: -295px;

    }
    to {
        left: calc(100% + 300px);
    }
}

.booking-form .hotline {
	padding: 6px 0;
	text-align: center;
